@import '/components/xy-ui/static/style/main';
.flex {
  display: flex;
}

.search{
  padding-left:30rpx;
  padding-right:40rpx;
}

.scroll-wrapper{
  width:100%;
  height:100%;
  box-shadow:0px 2rpx 15rpx 2rpx rgba(155,155,155,0.23);
}

.nav{
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin:0 40rpx; */
  height:85rpx;
  border-bottom:2rpx solid #E8E8E8;
  padding:0 40rpx;
  box-sizing: border-box;
  background-color: #fff;

}

.nav .left{
  display:flex;
  color:#999;
}

.nav .left view{
  margin-right:30rpx;
}

.nav .right{
  display:flex;
  
}

.nav .right view{
  position:relative;
  /* width:110rpx; */
  padding: 0 20rpx;
  height:55rpx;
  text-align: center;
  line-height:55rpx;
  margin-left:20rpx;
  background:#F6F6F6;
  border-radius:8rpx;
  color:#333;
  font-size:24rpx;
}

.nav .right view::after{
  content: '';
  display:inline-block;
  transform: translate(8rpx,2rpx);
  width:0px;
  height:0px;
  border-top:3px solid rgba(0,0,0,0);
  border-right:3px solid  #C5C5C5;
  border-bottom:3px solid #C5C5C5;
  border-left:3px solid  rgba(0,0,0,0);

}

.nav .right .selection{
  color:#035FC2;
  background:rgba(42,133,243,.1);
}

.nav .right .selection::after {
  border-right:3px solid  #035FC2;
  border-bottom:3px solid #035FC2;
}


.select-box{
  position: fixed;
  top: 0;
  left: 100%;
  z-index: 1000;
  height: 100vh;
  width: 100vw;
  background-color:#fff;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  box-sizing: border-box;
  transition: all .35s ease-in;
}

.scroll-view{
  width:calc(100vw - 160rpx);
  height:100%;
}

.fixed{
  position:absolute;
  top:0;
  left:0;
  right:0;
  background:#fff;
}

.select-content{
  padding:0 6rpx 0 40rpx;
}

.wrapper{
  margin-bottom:30rpx;
}

.sub-title{
  text-align: left;
  font-size:30rpx;
  margin-top: 26rpx;
  margin-bottom: 26rpx;
}

.content{
  display:block;
  width:100%;
  margin-top:10rpx;
}

.content li{
  display: inline-block;
  height: 64rpx;
  line-height:60rpx;
  margin-right: 24rpx;
  margin-bottom: 16rpx;
  padding: 0 26rpx;
  font-size: 26rpx;
  border-radius: 68rpx;
  text-align: center;
  box-sizing: border-box;
  border: 2rpx solid #ccc;
}

.content .on{
  border:2rpx solid #2F57CF;
  color:#2F57CF;
  background:#fff;
}

/* 地区 */
.region-view{
  display:flex;
}

.scroll-item{
  box-sizing: border-box;
  width:160rpx;
  height:100%;
  background:#F6F6F6;
}

.scroll-item view {
  padding:26rpx 30rpx;
}

.scroll-item .on{
  color:#2F57CF;
  background:#fff;
  border-left:4rpx solid #2F57CF;
}