page{
  box-sizing: border-box;
  background-color: #ffffff;
}

.texthidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.texthidden-2{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-c {
  display: flex;
  align-items: center;
}

.flex-cc {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-cs {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-csa {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.borderbottom{
  border-bottom: 2rpx solid rgba(235,235,235,0.8);
}