/* pages/my/my.wxss */
.my-bg{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 750rpx;
  height: 350rpx;
}
.my-top{
  position: relative;
  top: 0;
  width:750rpx;
  height: 350rpx;
  padding: 30rpx 40rpx 19rpx;
  box-sizing: border-box;
}
.my-top__top,.my-top__bottom{
  position: absolute;
  width: 670rpx;
}
.my-top__top-left image{
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
}
.my-top__top-left{
  align-items: center;
}
.my-top__top-left__info{
  color: #BECFFF;
  font-size: 28rpx;
  margin-left: 25rpx;
  height: 110rpx;
  padding:8rpx 0;
  box-sizing: border-box;
}
.my-top__top-left__info view:first-child{
  font-size:34rpx;
  font-weight:400;
  color: #fff;
  margin-bottom: 16rpx;
}


.my-top__bottom{
  width:670rpx;
  height:160rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 15rpx 0px rgba(155,155,155,0.23);
  border-radius:12rpx;
  margin:30rpx auto 0;
  bottom: 19rpx;
}
.my-top__bottom-item{
  position:relative;
  flex-direction: column;
  font-size:26rpx;
  color: #999999;
}

.my-top__bottom-item .tips{
  position:absolute;
  top:-3rpx;
  right:25rpx;
  width:15rpx;
  height:15rpx;
  background:red;
  border-radius:50%;
}

.my-top__bottom-item image{
  height: 45rpx;
  width: 45rpx;
  margin-bottom: 18rpx;
}

.position{
  position:fixed;
  bottom:100rpx;
  width:100%;
}