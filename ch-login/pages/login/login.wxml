<view class='flex-cs header'>
	<view class='header-scan'>
		<image src='/ch-login/assets/images/scan.png'></image>
		<view>扫一扫</view>
	</view>
	<view class='header-scan' data-url="/ch-login/pages/register/register" bindtap="jump">
		<image src='/ch-login/assets/images/register.png'></image>
		<view>注册</view>
	</view>
</view>

<view class='login flex-c'>
	<image></image>
</view>

<xy-input id="name" placeholder="请输入手机号" type='digit' label="手机号" bind:change="inputPhone" />
<xy-input id="password" type="password" placeholder="请输入密码" label="密码" bind:change="inputPSW" append>
	<view slot="append" class='append psd_append' bindtap="changePassword">
		<image src='{{showPassword?"/ch-login/assets/images/psd-on.png":"/ch-login/assets/images/psd-off.png"}}'></image>
	</view>
</xy-input>

<view class="xy-Rule">
	<xy-icon type="{{isOK?'confirm':'cancel'}}" bindtap="select" />
	登录即代表您已同意<navigator url="/ch-login/pages/userProtocol/index">《用户协议》</navigator>
</view>

<xy-button-group primaryText="登录" bindprimaryTap='loginEvent' />

<view class='flex-cs login-method'>
	<text data-url='/ch-login/pages/phone/phone' bindtap="jump">使用手机动态验证码登录</text>
	<text data-url='/ch-login/pages/phone/phone' bindtap="jump">忘记密码?</text>
</view>

<view class='thirdLogin'>
	<view class="thirdLogin-write">第三方登录方式</view>
	<view class='thirdLogin-content' bindtap="wechatLogin">
		<image src='/ch-login/assets/images/weChat.png'></image>
		<view>微信</view>
	</view>
</view>