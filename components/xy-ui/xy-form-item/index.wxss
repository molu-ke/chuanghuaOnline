.form-item.form-item--warn {
  padding-bottom: 10rpx;
}

.form-item__status-message--warn {
  font-size: 30rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.form-item {
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-top: 34rpx;
  padding-bottom: 22rpx;
  position: relative;
}

.form-item::after {
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  left: 0;
  right: 0;
  content: '';
  position: absolute;
  background-color: #ebebeb;
  bottom: 0;
}

.form-item.form-item--warn {
  border-bottom-color: #f13939;
}

.form-item__label {
  font-size:28rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.form-item__label-required{
  color:#f13939;
}

.form-item__wrap--disabled {
  opacity: 0.3;
}

.form-item__status-message {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.form-item__status-message--warn {
  color: #f13939;
}
