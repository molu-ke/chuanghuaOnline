/* components/myComp/banner/banner.wxss */
.banner-view{
  margin-top: 20rpx;
}
.banner-view .container{
  overflow: hidden;
  border-radius: 10rpx;
  position: relative;
  width: 100%;
}
.swiper{
  height: 300rpx;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
swiper{
  height: 100%;
}
.banner-view .container .bannerImage{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.banner-view .wx-swiper-dot{
    width:28rpx !important;
    display: inline-flex;
    height: 8rpx;
    margin-left: 10rpx;
    justify-content:space-between;
}

.banner-view .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(223,223,223,.5);
    border-radius: 4rpx
}
.topic-detail-icon{
  position: absolute;
  width: 160rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  border-radius: 32rpx 0 0 32rpx;
  font-size: 26rpx;
  background-color: #F85B42;
  right: 0;
  top: 21rpx;
  color: #fff;
}
.topic-detail-icon text{
  margin: 0 11rpx 0 16rpx;
}
.topic-detail-icon image{
  width: 15rpx;
  height: 24rpx;
  margin-top: 5rpx;
}
.indicator{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}
.indicator .text{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: rgba(255,255,255,1);
  opacity: 0.5;
  border-radius: 50%;
  margin-right: 14rpx;
}
.indicator .text.active{
  width: 18rpx;
  opacity: 1;
  border-radius: 10rpx;
}